<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
<div class=error>
<h4><%= @book.errors.count %>error</h4>
　　<ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <br><%= f.submit 'Update Book' %></br>
<% end %>
<%= link_to 'Show', book_path(@book) %>
<%= link_to "back", books_path %>